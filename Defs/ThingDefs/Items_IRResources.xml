<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--================== Bases ==================-->

  <ThingDef Name="ResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <label>unspecified resource</label>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
  </ThingDef>
  
  <!--================== Fuel ==================-->
  
  <ThingDef ParentName="ResourceBase">
    <defName>Biodiesel</defName>
    <label>Biodiesel</label>
    <description>Biodiesel fuel.</description>
    <graphicData>
      <texPath>Coolant</texPath>

      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>75</stackLimit>
    <soundInteract>Metal_Drop</soundInteract>

    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>10</MarketValue>
      <Flammability>0.3</Flammability>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
  </ThingDef>

  <ThingDef ParentName="ResourceBase">
    <defName>VehicleATVFrame</defName>
    <label>Vehicle ATV Frame</label>
    <description>vehicle ATV frame</description>
    <graphicData>
      <texPath>Things/Vehicles/VehicleATV/ATV</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <stackLimit>1</stackLimit>
    <soundInteract>Metal_Drop</soundInteract>

    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>10</MarketValue>
      <Flammability>0</Flammability>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
  </ThingDef>

</Defs>